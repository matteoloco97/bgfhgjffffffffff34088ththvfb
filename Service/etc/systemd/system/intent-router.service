[Unit]
Description=Quantum Intent Router (FastAPI)
After=network.target

[Service]
Type=simple
WorkingDirectory=/PATH/TO/YOUR/REPO
ExecStart=/usr/bin/python3 -m uvicorn backend.intent_router:app --host 0.0.0.0 --port 8090 --workers 1
Restart=always
RestartSec=2

[Install]
WantedBy=multi-user.target
